<!DOCTYPE html>

<html>
    <head>
        <!-- Loading title in tab bar -->
        <title>{{title}}</title>

        <!-- Loading CSS Style sheet -->
        <link rel="stylesheet" href="/css/style.css"/>
    </head>
    <body>

        <!-- Body Root Div-->
        <div id="root-dv" class="root-dv">

            <!-- Body Header Partial Div-->
            <div id="bh-dv" class="bh-dv fixed-head">
                <!-- Loading Header Partial-->
            {{>header}}
            </div>

            <!-- Main Body Content Div Partial Div-->
            <div id="bm-dv" class="bm-dv">

                <div class="bm-dv1">
                    <p id="user_id"hidden>{{id}}</p>
                    <div class="content-center">
                        <form id="update-form">
                            <input type="text" placeholder="First Name" id="ufirst-name" class="input-look" value={{firstName}} /><br/>
                            <input type="text" placeholder="Last Name" id="ulast-name" class="input-look" value={{lastName}} /><br/>
                            <input type="text" placeholder="Email" id="uemail" class="input-look" value={{email}} /><br/>
                            <input type="date" placeholder="Date Of Birth" id="udate-of-birth" max={{maxDate}} class="input-look" value={{dateOfBirth}} /><br/>
                            <textarea rows="3" placeholder="Short BIO" id="ushort-bio" >{{shortBio}}</textarea><br/>

                            <p id="uinfo-message"></p>
                            <button id="update-btn" class="form-btn round-corner">Update</button>
                        </form>
                        <button id="uview-btn" hidden class="form-alt-btn round-corner">View Update</button>
                    </div>
                </div>
            </div>
        </div>


        <!-- Body Footer Partial Div-->
        <div class="content-center">
            <!-- Loading Footer Partial-->
            {{>footer}}
        </div>
        

        <!-- Loading All Required JavaScripts-->
        <script src="/js/updateUser.js"></script>
    </body>
</html>